---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Changelog" description="Project changelog and version history">
  <!-- Header -->
  <section class="fade-in">
    <h2 class="font-display text-xl font-semibold text-base-content">Changelog</h2>
    <p class="mt-2 text-sm/6 text-base-content/70">
      Project version history and updates
    </p>
  </section>

  <!-- Latest Version -->
  <section class="mt-8 fade-in">
    <div class="rounded-xl bg-primary/10 p-5 ring-1 ring-primary/20">
      <div class="flex items-center gap-4">
        <span class="badge badge-primary">Latest</span>
        <span class="text-xl font-semibold">v1.0.0</span>
        <span class="text-base-content/50">November 2025</span>
      </div>
      <p class="mt-2 text-sm text-base-content/70">Initial release with complete QEMU/KVM Windows 11 virtualization stack</p>
    </div>
  </section>

  <!-- Timeline -->
  <section class="mt-12 fade-in">
    <h3 class="font-display text-lg font-semibold text-base-content">Release History</h3>

    <div class="mt-6 space-y-6">
      <!-- November 30 -->
      <div class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-3 before:w-3 before:rounded-full before:bg-primary">
        <div class="rounded-xl bg-base-200 p-4 ring-1 ring-base-content/5">
          <time class="text-xs text-base-content/50">November 30, 2025</time>
          <h4 class="mt-1 font-semibold">Documentation Website</h4>
          <p class="mt-1 text-sm text-base-content/70">Astro + TailwindCSS + DaisyUI documentation site</p>
          <ul class="mt-2 space-y-1 text-sm text-base-content/70">
            <li>Custom themes (nightowl/sunrise)</li>
            <li>6 content pages</li>
            <li>GitHub Pages deployment</li>
            <li>Self-hosted runner support</li>
          </ul>
        </div>
      </div>

      <!-- November 28 -->
      <div class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-3 before:w-3 before:rounded-full before:bg-secondary">
        <div class="rounded-xl bg-base-200 p-4 ring-1 ring-base-content/5">
          <time class="text-xs text-base-content/50">November 28, 2025</time>
          <h4 class="mt-1 font-semibold">AI Agent System v2</h4>
          <p class="mt-1 text-sm text-base-content/70">62-agent 4-tier hierarchical system</p>
          <ul class="mt-2 space-y-1 text-sm text-base-content/70">
            <li>9 slash commands added</li>
            <li>Haiku optimization for 48% cost reduction</li>
            <li>Agent delegation flow</li>
          </ul>
        </div>
      </div>

      <!-- November mid -->
      <div class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-3 before:w-3 before:rounded-full before:bg-accent">
        <div class="rounded-xl bg-base-200 p-4 ring-1 ring-base-content/5">
          <time class="text-xs text-base-content/50">November 2025</time>
          <h4 class="mt-1 font-semibold">Script Automation</h4>
          <p class="mt-1 text-sm text-base-content/70">24 shell scripts for complete automation</p>
          <ul class="mt-2 space-y-1 text-sm text-base-content/70">
            <li>install-master.sh orchestrator</li>
            <li>TUI menu with gum</li>
            <li>Comprehensive logging</li>
          </ul>
        </div>
      </div>

      <!-- November early -->
      <div class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-3 before:w-3 before:rounded-full before:bg-info">
        <div class="rounded-xl bg-base-200 p-4 ring-1 ring-base-content/5">
          <time class="text-xs text-base-content/50">November 2025</time>
          <h4 class="mt-1 font-semibold">Research & Documentation</h4>
          <p class="mt-1 text-sm text-base-content/70">Comprehensive research phase</p>
          <ul class="mt-2 space-y-1 text-sm text-base-content/70">
            <li>14 Hyper-V enlightenments documented</li>
            <li>60+ security checklist items</li>
            <li>Performance benchmarks</li>
          </ul>
        </div>
      </div>

      <!-- Project Inception -->
      <div class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-3 before:w-3 before:rounded-full before:bg-base-content/30">
        <div class="rounded-xl bg-base-200 p-4 ring-1 ring-base-content/5">
          <time class="text-xs text-base-content/50">November 2025</time>
          <h4 class="mt-1 font-semibold">Project Inception</h4>
          <p class="mt-1 text-sm text-base-content/70">Initial project setup and planning</p>
          <ul class="mt-2 space-y-1 text-sm text-base-content/70">
            <li>Constitutional framework</li>
            <li>Directory structure</li>
            <li>Git workflow defined</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Roadmap -->
  <section class="mt-12 fade-in">
    <h3 class="font-display text-lg font-semibold text-base-content">Upcoming</h3>

    <div class="mt-4 grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="rounded-xl border border-dashed border-base-content/20 p-4">
        <span class="badge badge-ghost badge-sm">Planned</span>
        <h4 class="mt-2 font-semibold">GPU Passthrough</h4>
        <p class="mt-1 text-sm text-base-content/70">Intel UHD 770 VFIO passthrough to Windows VM</p>
      </div>
      <div class="rounded-xl border border-dashed border-base-content/20 p-4">
        <span class="badge badge-ghost badge-sm">Planned</span>
        <h4 class="mt-2 font-semibold">virtio-fs Setup</h4>
        <p class="mt-1 text-sm text-base-content/70">Host filesystem sharing with read-only protection</p>
      </div>
      <div class="rounded-xl border border-dashed border-base-content/20 p-4">
        <span class="badge badge-ghost badge-sm">Planned</span>
        <h4 class="mt-2 font-semibold">TUI Demo Videos</h4>
        <p class="mt-1 text-sm text-base-content/70">Asciinema recordings of installation workflow</p>
      </div>
      <div class="rounded-xl border border-dashed border-base-content/20 p-4">
        <span class="badge badge-ghost badge-sm">Planned</span>
        <h4 class="mt-2 font-semibold">Pagefind Search</h4>
        <p class="mt-1 text-sm text-base-content/70">Full-text search across documentation</p>
      </div>
    </div>
  </section>

  <!-- Navigation -->
  <section class="mt-12 fade-in">
    <a href={import.meta.env.BASE_URL} class="btn btn-ghost">
      <span aria-hidden="true">&larr;</span>
      Back to Home
    </a>
  </section>
</BaseLayout>
