---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProgressTracker from '../components/ProgressTracker.astro';
---

<BaseLayout title="Overview" description="Project overview for QEMU/KVM Windows 11 virtualization">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="breadcrumbs text-sm mb-4">
        <ul>
          <li><a href={import.meta.env.BASE_URL}>Home</a></li>
          <li>Overview</li>
        </ul>
      </div>
      <h1 class="text-4xl font-bold mb-4">Project Overview</h1>
      <p class="text-lg text-base-content/70">
        Running native Microsoft 365 Outlook on Ubuntu with 85-95% native performance
      </p>
    </div>

    <!-- Mission Statement -->
    <div class="card bg-linear-to-r from-primary/10 to-secondary/10 mb-8">
      <div class="card-body">
        <h2 class="card-title text-2xl">Mission</h2>
        <p class="text-lg">
          Enable professional Windows 11 virtualization on Ubuntu 25.10 using QEMU/KVM,
          achieving <strong class="text-primary">85-95% native performance</strong> with
          enterprise-grade security and complete automation.
        </p>
      </div>
    </div>

    <!-- Project Stats -->
    <ProgressTracker
      title="Project Status"
      items={[
        { label: "Development", value: 100, status: "success", description: "Scripts complete" },
        { label: "Documentation", value: 100, status: "success", description: "Fully documented" },
        { label: "Deployment", value: 0, status: "warning", description: "Not installed" },
      ]}
    />

    <!-- Architecture -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Technical Architecture</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">
              <span class="badge badge-primary">Host</span>
              Ubuntu 25.10
            </h3>
            <ul class="list-disc list-inside text-base-content/70 space-y-1">
              <li>Kernel 6.17.0-7-generic</li>
              <li>NVIDIA RTX 3060 (AI workloads)</li>
              <li>64GB DDR5 RAM</li>
              <li>Intel i7-14700</li>
            </ul>
          </div>
        </div>

        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">
              <span class="badge badge-secondary">Guest</span>
              Windows 11 Pro
            </h3>
            <ul class="list-disc list-inside text-base-content/70 space-y-1">
              <li>Q35 chipset + UEFI</li>
              <li>Intel UHD 770 (passthrough)</li>
              <li>8-16GB allocated RAM</li>
              <li>VirtIO drivers</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Key Technologies -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Key Technologies</h2>

      <div class="overflow-x-auto">
        <table class="table table-zebra bg-base-200 rounded-sm">
          <thead>
            <tr>
              <th>Technology</th>
              <th>Purpose</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="font-medium">QEMU/KVM</td>
              <td>Hardware-accelerated virtualization</td>
              <td><span class="badge badge-success">Ready</span></td>
            </tr>
            <tr>
              <td class="font-medium">VirtIO</td>
              <td>High-performance I/O (disk, network)</td>
              <td><span class="badge badge-success">Ready</span></td>
            </tr>
            <tr>
              <td class="font-medium">Hyper-V Enlightenments</td>
              <td>14 Windows-specific optimizations</td>
              <td><span class="badge badge-success">Ready</span></td>
            </tr>
            <tr>
              <td class="font-medium">virtio-fs</td>
              <td>Host filesystem sharing</td>
              <td><span class="badge badge-success">Ready</span></td>
            </tr>
            <tr>
              <td class="font-medium">VFIO GPU Passthrough</td>
              <td>Intel iGPU to Windows VM</td>
              <td><span class="badge badge-info">Planned</span></td>
            </tr>
            <tr>
              <td class="font-medium">IOMMU/VT-d</td>
              <td>Device isolation (16 groups)</td>
              <td><span class="badge badge-success">Enabled</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Project Statistics -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Project Statistics</h2>

      <div class="stats stats-vertical lg:stats-horizontal shadow-sm w-full bg-base-200">
        <div class="stat">
          <div class="stat-title">Shell Scripts</div>
          <div class="stat-value text-primary">24</div>
          <div class="stat-desc">Automation scripts</div>
        </div>
        <div class="stat">
          <div class="stat-title">AI Agents</div>
          <div class="stat-value text-secondary">62</div>
          <div class="stat-desc">4-tier hierarchy</div>
        </div>
        <div class="stat">
          <div class="stat-title">Slash Commands</div>
          <div class="stat-value text-accent">9</div>
          <div class="stat-desc">One-command workflows</div>
        </div>
        <div class="stat">
          <div class="stat-title">Documentation</div>
          <div class="stat-value">198KB</div>
          <div class="stat-desc">Comprehensive guides</div>
        </div>
      </div>
    </div>

    <!-- Use Cases -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Use Cases</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="card bg-base-200">
          <div class="card-body">
            <div class="badge badge-primary mb-2">Primary</div>
            <h3 class="card-title text-lg">Microsoft 365</h3>
            <p class="text-sm text-base-content/70">
              Native Outlook desktop for professional email and calendar management
            </p>
          </div>
        </div>
        <div class="card bg-base-200">
          <div class="card-body">
            <div class="badge badge-secondary mb-2">Secondary</div>
            <h3 class="card-title text-lg">Windows Apps</h3>
            <p class="text-sm text-base-content/70">
              Run Windows-only applications with full hardware acceleration
            </p>
          </div>
        </div>
        <div class="card bg-base-200">
          <div class="card-body">
            <div class="badge badge-accent mb-2">Development</div>
            <h3 class="card-title text-lg">Testing</h3>
            <p class="text-sm text-base-content/70">
              Cross-platform development and testing environment
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Get Started</h2>
      <div class="flex flex-wrap gap-4">
        <a href={`${import.meta.env.BASE_URL}installation`} class="btn btn-primary">
          Installation Guide
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a href={`${import.meta.env.BASE_URL}agents`} class="btn btn-outline">View AI Agents</a>
      </div>
    </div>
  </div>
</BaseLayout>
