---
/**
 * Button - Commit-style embossed button
 * Features depth effect with pseudo-elements
 */
interface Props {
  href?: string;
  arrow?: boolean;
  class?: string;
  variant?: 'primary' | 'secondary' | 'ghost';
}

const { href, arrow = false, class: className = '', variant = 'primary' } = Astro.props;

const baseClasses = 'group relative isolate inline-flex items-center gap-2 rounded-md py-1.5 text-[0.8125rem]/6 font-semibold transition-all duration-150';

const variantClasses = {
  primary: 'bg-primary text-primary-content',
  secondary: 'bg-secondary text-secondary-content',
  ghost: 'bg-transparent text-base-content hover:bg-base-200',
};

const paddingClasses = arrow ? 'pl-2.5 pr-[calc(9/16*1rem)]' : 'px-2.5';
const classes = `${baseClasses} ${variantClasses[variant]} ${paddingClasses} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <span class="btn-gradient"></span>
    <span class="btn-shadow"></span>
    <slot />
    {arrow && <span aria-hidden="true">&rarr;</span>}
  </a>
) : (
  <button class={classes}>
    <span class="btn-gradient"></span>
    <span class="btn-shadow"></span>
    <slot />
    {arrow && <span aria-hidden="true">&rarr;</span>}
  </button>
)}

<style>
  .btn-gradient {
    position: absolute;
    inset: 0;
    border-radius: 0.375rem;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 1));
    opacity: 0.1;
    transition: opacity 150ms;
    pointer-events: none;
  }

  .btn-shadow {
    position: absolute;
    inset: 0;
    border-radius: 0.375rem;
    box-shadow: inset 0 1px 1px white;
    opacity: 0.075;
    transition: opacity 150ms;
    pointer-events: none;
  }

  .group:hover .btn-gradient {
    opacity: 0.15;
  }

  .group:hover .btn-shadow {
    opacity: 0.1;
  }
</style>
