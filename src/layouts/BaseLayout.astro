---
import '../styles/app.css';
import SearchModal from '../components/SearchModal.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'QEMU/KVM Windows 11 Virtualization Documentation' } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="nightowl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <title>{title} | QEMU/KVM Docs</title>

    <!-- Theme toggle script (runs before paint to prevent flash) -->
    <script is:inline>
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: light)').matches ? 'sunrise' : 'nightowl');
      document.documentElement.setAttribute('data-theme', theme);
    </script>
  </head>
  <body class="min-h-dvh bg-base-100 text-base-content">
    <!-- Navigation -->
    <nav class="navbar bg-base-200 sticky top-0 z-50 shadow-xs">
      <div class="navbar-start">
        <a href={import.meta.env.BASE_URL} class="btn btn-ghost text-xl font-bold">
          <span class="text-primary">QEMU</span>
          <span class="text-secondary">/KVM</span>
        </a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal gap-2 px-1">
          <li><a href={`${import.meta.env.BASE_URL}overview`} class="hover:text-primary">Overview</a></li>
          <li><a href={`${import.meta.env.BASE_URL}installation`} class="hover:text-primary">Installation</a></li>
          <li><a href={`${import.meta.env.BASE_URL}performance`} class="hover:text-primary">Performance</a></li>
          <li><a href={`${import.meta.env.BASE_URL}security`} class="hover:text-primary">Security</a></li>
          <li><a href={`${import.meta.env.BASE_URL}agents`} class="hover:text-primary">Agents</a></li>
        </ul>
      </div>
      <div class="navbar-end gap-2">
        <!-- Search Button -->
        <button class="btn btn-ghost btn-circle" aria-label="Search" id="search-btn">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        <!-- Theme Toggle -->
        <label class="swap swap-rotate btn btn-ghost btn-circle">
          <input type="checkbox" id="theme-toggle" aria-label="Toggle theme" />
          <!-- Sun icon -->
          <svg class="swap-on h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/>
          </svg>
          <!-- Moon icon -->
          <svg class="swap-off h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/>
          </svg>
        </label>
        <!-- GitHub Link -->
        <a href="https://github.com/kairin/win-qemu-docs" class="btn btn-ghost btn-circle" aria-label="GitHub" target="_blank" rel="noopener">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <!-- Mobile menu -->
        <div class="dropdown dropdown-end lg:hidden">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-200 rounded-sm z-[1] mt-3 w-52 p-2 shadow-sm">
            <li><a href={`${import.meta.env.BASE_URL}overview`}>Overview</a></li>
            <li><a href={`${import.meta.env.BASE_URL}installation`}>Installation</a></li>
            <li><a href={`${import.meta.env.BASE_URL}performance`}>Performance</a></li>
            <li><a href={`${import.meta.env.BASE_URL}security`}>Security</a></li>
            <li><a href={`${import.meta.env.BASE_URL}agents`}>Agents</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <!-- Search Modal -->
    <SearchModal />

    <!-- Footer -->
    <footer class="footer footer-center bg-base-200 text-base-content p-10">
      <aside>
        <p class="font-bold text-lg">
          QEMU/KVM Windows 11 Documentation
        </p>
        <p>Running Microsoft 365 on Ubuntu with 85-95% native performance</p>
        <p class="text-sm opacity-70">
          Educational purposes only. Built with Astro + TailwindCSS + DaisyUI
        </p>
      </aside>
      <nav>
        <div class="grid grid-flow-col gap-4">
          <a href="https://github.com/kairin/win-qemu-docs" class="link link-hover">GitHub</a>
          <a href={`${import.meta.env.BASE_URL}overview`} class="link link-hover">Documentation</a>
          <a href={`${import.meta.env.BASE_URL}changelog`} class="link link-hover">Changelog</a>
        </div>
      </nav>
    </footer>

    <!-- Theme toggle script -->
    <script>
      const toggle = document.getElementById('theme-toggle') as HTMLInputElement;
      const html = document.documentElement;

      // Set initial checkbox state
      toggle.checked = localStorage.getItem('theme') === 'sunrise';

      toggle.addEventListener('change', () => {
        const newTheme = toggle.checked ? 'sunrise' : 'nightowl';
        html.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      });

      // Listen for system theme changes
      window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', (e) => {
        if (!localStorage.getItem('theme')) {
          const newTheme = e.matches ? 'sunrise' : 'nightowl';
          html.setAttribute('data-theme', newTheme);
          toggle.checked = e.matches;
        }
      });
    </script>
  </body>
</html>
